@page

<div class="text-center">
    <h2>Thank you</h2>
    <p>Thanks for placing your order, your order number is #@OrderId</p>
    <p>We will ship your book order as soon as possible</p>
    <a class="btn btn-primary" asp-controller="Home">Return to Store</a>
</div>

@functions{
    [BindProperty(SupportsGet = true)]
    public string OrderId { get; set; }

}